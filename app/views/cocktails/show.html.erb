<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo, height: 400, width: 400, crop: :fill %>

  <ol>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> de <%= dose.ingredient.name %>
      <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>  </li>
      <% end %>
  </ol>
<%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %> <br>
<%= link_to "Back to cocktails", cocktails_path %>
